<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- ===================================================================== -->
<!--                                                                       -->
<!--  Log4j Configuration                                                  -->
<!--                                                                       -->
<!-- ===================================================================== -->

<!-- $Id: log4j.xml,v 1.3 2007/10/31 08:17:07 jayapm Exp $ -->

<!--
  | For more configuration infromation and examples see the Jakarta Log4j
  | website: http://jakarta.apache.org/log4j
-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

  <!-- ================================= -->
  <!-- Preserve messages in a local file -->
  <!-- ================================= -->

  <appender name="FILE"
    class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="SAF.log" />
    <!-- /usr/local/apache-tomcat-7.0.50/logs/ -->
    <param name="MaxFileSize" value="10000KB" />
    <param name="MaxBackupIndex" value="10" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[SAF] %d{MMM-dd-yy HH:mm a} - %p %C{1}.%M(%L) | %m%n" />
    </layout>
  </appender>

  <!-- ============================== -->
  <!-- Append messages to the console -->
  <!-- ============================== -->

  <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout" >
      <param name="ConversionPattern" value="[SAF] %d{MMM-dd-yy HH:mm a} - %p %C{1}.%M(%L) | %m%n" />
    </layout>
  </appender>

  <!-- ============================== -->
  <!-- Append messages to the mail    -->
  <!-- ============================== -->

  <appender name="MAIL" class="org.apache.log4j.net.SMTPAppender">
    <param name="To" value="someuser@somehost.com" />
    <param name="From" value="someuser@somehost.com" />
    <param name="Subject"
      value="Error in application SAF-1.0 at host localhost" />
    <param name="SMTPHost" value="mail.smtp.host.com" />
    <param name="Threshold" value="ERROR" />
    <param name="BufferSize" value="1" />

    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
        value="%d  %-5p %c %x - %m%n" />
    </layout>
  </appender>

  <!-- WARNING: The DEBUG messages can really reduce the application performance -->

  <category name="org.hibernate">
    <priority value="WARN" />
  </category>
  <category name="org.tuckey">
    <priority value="DEBUG" />
  </category>
  <category name="com.opensymphony.oscache">
    <priority value="WARN" />
  </category>
  <category name="org.springframework">
    <priority value="WARN" />
  </category>
  <category name="org.apache">
    <priority value="WARN" />
  </category>
  <category name="com.canoo.webtest">
    <priority value="WARN" />
  </category>
  <category name="net.sf.ehcache">
    <priority value="WARN" />
  </category>
  <category name="org.pdfbox">
    <priority value="WARN" />
  </category>
  <category name="org.textmining">
    <priority value="WARN" />
  </category>
  <category name="org.quartz">
    <priority value="WARN" />
  </category>
  <category name="org.acegisecurity">
    <priority value="WARN" />
  </category>
  <category
    name="org.acegisecurity.event.authentication.LoggerListener">
    <priority value="ERROR" />
  </category>
  <category name="org.tuckey.web.filters.urlrewrite">
    <priority value="WARN" />
  </category>
  <category name="org.enhydra">
    <priority value="WARN" />
  </category>
  <category name="org.mortbay">
    <priority value="WARN" />
  </category>

  <category name="com.gargoylesoftware">
    <priority value="WARN" />
  </category>

  <category name="org.apache.commons.httpclient">
    <priority value="WARN" />
  </category>

  <category name="httpclient">
    <priority value="WARN" />
  </category>

  <root>
    <priority value="INFO"/>
    <appender-ref ref="CONSOLE" />
    <!-- <appender-ref ref="FILE" /> -->

    <!-- uncomment below line to send errors into email -->
    <!--appender-ref ref="MAIL"/-->
  </root>
</log4j:configuration>
